{
  "name": "typescript-bank-kata",
  "version": "0.0.1",
  "author": "",
  "license": "ISC",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "dev": "npm run start-db && npm run start-node",
    "lint": "eslint src/**/*.ts{,x}",
    "lint:fix": "eslint --fix src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:features",
    "test:features": "cucumber-js tests/app/features",
    "test:unit": "NODE_ENV=test jest",
    "start:node": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/app/main.ts",
    "start:db": "docker-compose up -d",
    "stop:db": "docker-compose down --rmi local --volumes --remove-orphans"
  },
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "glob": "^10.3.10",
    "http-status": "^1.7.3",
    "mongodb": "^4.17.2",
    "node-dependency-injection": "2.6",
    "node-dependency-injection-express-middleware": "^1.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "uuid-validate": "^0.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@faker-js/faker": "^8.4.1",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.20",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.8",
    "@types/uuid-validate": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  }
}
